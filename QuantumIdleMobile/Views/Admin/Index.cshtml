    <script>
        const API_BASE_URL = window.location.origin;
        const password = sessionStorage.getItem('adminPassword');
        
        if (!password) {
            window.location.href = '/Admin/Login';
        }
        
        let currentPage = { users: 1, cards: 1, orders: 1, schemes: 1 };
        
        // Tab åˆ‡æ¢
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(t => t.classList.add('hidden'));
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
            document.getElementById('tab-' + tabName).classList.remove('hidden');
            event.target.classList.add('active');
            
            // åŠ è½½æ•°æ®
            if (tabName === 'stats') loadStats();
            else if (tabName === 'users') loadUsers();
            else if (tabName === 'cards') loadCards();
            else if (tabName === 'orders') loadOrders();
            else if (tabName === 'schemes') loadSchemes();
        }
        
        // åŠ è½½ç»Ÿè®¡
        async function loadStats() {
            try {
                const res = await fetch(`${API_BASE_URL}/api/admin/stats?password=${password}`);
                const result = await res.json();
                if (result.success) {
                    const d = result.data;
                    document.getElementById('statsGrid').innerHTML = `
                        <div class="stat-item"><div class="stat-value">${d.userCount}</div><div class="stat-label">ç”¨æˆ·æ€»æ•°</div></div>
                        <div class="stat-item"><div class="stat-value">${d.orderCount}</div><div class="stat-label">æ³¨å•æ€»æ•°</div></div>
                        <div class="stat-item"><div class="stat-value">${d.todayOrders}</div><div class="stat-label">ä»Šæ—¥æ³¨å•</div></div>
                        <div class="stat-item"><div class="stat-value ${d.todayProfit >= 0 ? 'success' : 'error'}">${d.todayProfit.toFixed(2)}</div><div class="stat-label">ä»Šæ—¥ç›ˆäº</div></div>
                        <div class="stat-item"><div class="stat-value">${d.cardCount}</div><div class="stat-label">å¡å¯†æ€»æ•°</div></div>
                        <div class="stat-item"><div class="stat-value">${d.unusedCardCount}</div><div class="stat-label">æœªä½¿ç”¨å¡å¯†</div></div>
                    `;
                }
            } catch (e) { console.error(e); }
        }
        
        // åŠ è½½ç”¨æˆ·
        async function loadUsers(page = 1) {
            currentPage.users = page;
            const search = document.getElementById('userSearch').value;
            try {
                const res = await fetch(`${API_BASE_URL}/api/admin/users?password=${password}&page=${page}&size=20&search=${search}`);
                const result = await res.json();
                if (result.success) {
                    document.getElementById('usersTable').innerHTML = result.data.map(u => `
                        <tr>
                            <td>${u.id}</td>
                            <td>${u.userName}</td>
                            <td><span class="badge ${u.isExpired ? 'badge-error' : 'badge-success'}">${u.isExpired ? 'å·²è¿‡æœŸ' : 'æ­£å¸¸'}</span></td>
                            <td class="${u.profit >= 0 ? 'success' : 'error'}">${u.profit.toFixed(2)}</td>
                            <td>${new Date(u.expireTime).toLocaleDateString()}</td>
                        </tr>
                    `).join('');
                    renderPagination('usersPagination', result.total, page, 20, 'loadUsers');
                }
            } catch (e) { console.error(e); }
        }
        
        // åŠ è½½å¡å¯†
        async function loadCards(page = 1) {
            currentPage.cards = page;
            const filter = document.getElementById('cardFilter').value;
            let url = `${API_BASE_URL}/api/admin/cards?password=${password}&page=${page}&size=20`;
            if (filter) url += `&isRedeemed=${filter}`;
            try {
                const res = await fetch(url);
                const result = await res.json();
                if (result.success) {
                    document.getElementById('cardsTable').innerHTML = result.data.map(c => `
                        <tr>
                            <td style="font-family:monospace;font-size:11px">${c.keyCode}</td>
                            <td>${c.durationDays}å¤©</td>
                            <td><span class="badge ${c.isRedeemed ? 'badge-error' : 'badge-success'}">${c.isRedeemed ? 'å·²ä½¿ç”¨' : 'æœªä½¿ç”¨'}</span></td>
                            <td>${new Date(c.createTime).toLocaleDateString()}</td>
                        </tr>
                    `).join('');
                    renderPagination('cardsPagination', result.total, page, 20, 'loadCards');
                }
            } catch (e) { console.error(e); }
        }
        
        // ç”Ÿæˆå¡å¯†
        async function generateCards() {
            const count = parseInt(document.getElementById('cardCount').value) || 1;
            const days = parseInt(document.getElementById('cardDays').value) || 30;
            const batch = document.getElementById('cardBatch').value;
            
            try {
                const res = await fetch(`${API_BASE_URL}/api/admin/cards/generate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password, count, durationDays: days, batchName: batch })
                });
                const result = await res.json();
                if (result.success) {
                    const container = document.getElementById('generatedCards');
                    container.classList.remove('hidden');
                    container.innerHTML = result.data.map(k => `<div>${k}</div>`).join('');
                    loadCards();
                } else {
                    alert(result.message);
                }
            } catch (e) { alert('ç”Ÿæˆå¤±è´¥'); }
        }
        
        // åŠ è½½æ³¨å•
        async function loadOrders(page = 1) {
            currentPage.orders = page;
            const userId = document.getElementById('orderUserId').value;
            const issue = document.getElementById('orderIssue').value;
            let url = `${API_BASE_URL}/api/admin/orders?password=${password}&page=${page}&size=20`;
            if (userId) url += `&userId=${userId}`;
            if (issue) url += `&issueNumber=${issue}`;
            try {
                const res = await fetch(url);
                const result = await res.json();
                if (result.success) {
                    document.getElementById('ordersTable').innerHTML = result.data.map(o => `
                        <tr>
                            <td>${o.id}</td>
                            <td>${o.appUserId}</td>
                            <td>${o.issueNumber || '-'}</td>
                            <td>${o.betContent}</td>
                            <td>${o.amount}</td>
                            <td class="${o.profit >= 0 ? 'success' : 'error'}">${o.profit.toFixed(2)}</td>
                            <td>${new Date(o.betTime).toLocaleString()}</td>
                        </tr>
                    `).join('');
                    renderPagination('ordersPagination', result.total, page, 20, 'loadOrders');
                }
            } catch (e) { console.error(e); }
        }
        
        // åŠ è½½æ–¹æ¡ˆ
        async function loadSchemes(page = 1) {
            currentPage.schemes = page;
            const userId = document.getElementById('schemeUserId').value;
            let url = `${API_BASE_URL}/api/admin/schemes?password=${password}&page=${page}&size=20`;
            if (userId) url += `&userId=${userId}`;
            try {
